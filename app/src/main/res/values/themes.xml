<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Convoapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/day_medium_purple</item>
        <item name="colorPrimaryVariant">@color/day_dark_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/night_light_purple</item>
        <item name="colorSecondaryVariant">@color/night_medium_purple</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:colorForeground">@color/text_black</item>
    </style>
</resources>